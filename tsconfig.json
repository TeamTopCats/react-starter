{
    "buildOnSave": false,
    "compileOnSave": true,
    "compilerOptions": {
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "declaration": false,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "outDir": "./dist",

        // "jsx": "react",
        // "target": "es6",
        // "module": "commonjs",
        // "outDir": "./dist",
        // "allowJs": false,
        // "sourceMap": true,
        // "declaration": false,
        // "removeComments": true,
        // "noEmit": true,
        // "importHelpers": true,
        // "downlevelIteration": true,
        // "isolatedModules": false,
        // "strict": true,
        // "skipLibCheck": true,
        // "noImplicitAny": false,
        // "noImplicitThis": false,
        // "strictNullChecks": true,
        // "alwaysStrict": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        // "noImplicitReturns": true,
        // "noFallthroughCasesInSwitch": true,
        // "moduleResolution": "node",
        // "baseUrl": "./",
        // "preserveSymlinks": true,
        // "allowSyntheticDefaultImports": true,
        "paths": {
            "*": [
                "node_modules/@types/*"
            ],
            "hocs": [
                "src/hocs"
            ],
            "segments": [
                "src/segments"
            ],
            "layouts": [
                "src/layouts"
            ],
            "variables": [
                "src/variables"
            ],
            "containers": [
                "src/containers"
            ],
            "components": [
                "src/components"
            ],
            "typings": [
                "src/typings"
            ],
            "assets": [
                "src/assets"
            ],
            "utils": [
                "src/utils"
            ],
            "config": [
                "src/config"
            ],
            "styles": [
                "src/assets/styles"
            ],
            "images": [
                "src/assets/images"
            ],
            "scripts": [
                "src/assets/scripts"
            ],
            "svgstore": [
                "src/assets/svgstore"
            ]
        },
        "types": [
            "node",
            "jest",
            "react",
            "core-js",
            "enzyme",
            "jest-styled-components",
            "styled-components"
        ],
        "typeRoots": [
            "typings",
            "node_modules/@types"
        ],
        "sourceRoot": "./",
        "mapRoot": "./",
        "inlineSources": false,
        "inlineSourceMap": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "dom",
            "es5",
            "es6",
            "esnext",
            "scripthost",
            "es2015"
        ]
    },
    "files": [
        "typings/json.d.ts"
    ],
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.scss",
        "!node_modules/**/*"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "dist",
        "tests",
        "webpack",
        "typings",
        "coverage",
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "useBabel": true,
        "forkChecker": true,
        "transpileOnly": false,
        "useWebpackText": true,
        "errorsAsWarnings": true,
        "useTranspileModule": true
    }
}
