{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "module": "esnext",
        "baseUrl": ".",
        "outDir": "dist",
        "rootDir": "src",
        "sourceRoot": "./src",
        "sourceMap": true,
        "diagnostics": true,
        "declaration": false,
        "removeComments": true,
        "importHelpers": false,
        "noEmitHelpers": false,
        "downlevelIteration": true,
        "isolatedModules": false,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "stripInternal": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "preserveSymlinks": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSourceMap": false,
        "inlineSources": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            "node",
            "jest",
            "react",
            "enzyme",
            "react-router",
            "react-router-dom",
            "styled-components",
            "jest-styled-components"
        ],
        "typeRoots": [
            "typings",
            "src/typings",
            "node_modules/@types"
        ],
        "lib": [
            "dom",
            "es5",
            "es2015"
        ],
        "paths": {
            "*": [
                "src/*"
            ],
            // "tslib": [
            //     "node_modules/tslib/tslib.d.ts"
            // ],
            "hocs": [
                "src/hocs"
            ],
            "segments": [
                "src/segments"
            ],
            "layouts": [
                "src/layouts"
            ],
            "variables": [
                "src/variables"
            ],
            "containers": [
                "src/containers"
            ],
            "components": [
                "src/components"
            ],
            "typings": [
                "src/typings"
            ],
            "assets": [
                "src/assets"
            ],
            "utils": [
                "src/utils"
            ],
            "config": [
                "src/config"
            ],
            "styles": [
                "src/assets/styles"
            ],
            "images": [
                "src/assets/images"
            ],
            "scripts": [
                "src/assets/scripts"
            ],
            "svgstore": [
                "src/assets/svgstore"
            ]
        }
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.scss",
        "!node_modules/**/*"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "dist",
        "tests",
        "webpack",
        "coverage"
    ],
    "plugins": [
        {
            "name": "typescript-styled-plugin",
            "validate": false,
            "lint": {
                "vendorPrefix": "error",
                "zeroUnits": "ignore",
                "important": "warning"
            },
            "tags": [
                "styled",
                "css",
                "sty"
            ]
        }
    ]
}
