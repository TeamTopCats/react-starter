{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "lib": [ "es5", "es2015", "dom" ],
        "jsx": "react",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noStrictGenericChecks": true,
        "preserveConstEnums": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "removeComments": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "rootDir": "./",
        "outDir": "./dist",
        "strict": true
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests",
        "webpack",
        "**/*.spec.ts"
    ]
}
