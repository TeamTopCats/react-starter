{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        // "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "lib": [
            "es5",
            "es6",
            "es7",
            "dom"
        ]
    },
    "files": [
        "./app/typings/**.ts"
    ],
    "include": [
        "./app/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests",
        "webpack",
        "**/*.spec.ts"
    ]
}
