{
    "buildOnSave": false,
    "compileOnSave": true,
    "compilerOptions": {
        "jsx": "react",
        "baseUrl": "./app",
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "sourceMap": true,
        "allowJs": true,
        "declaration": false,
        "skipLibCheck": true,
        "inlineSources": false,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "removeComments": false,
        "inlineSourceMap": false,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "noImplicitReturns": false,
        "noUnusedParameters": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "lib": [
            "es5",
            "es6",
            "es7",
            "dom"
        ],
        "paths": {
            "hoc": [
                "./hoc"
            ],
            "segments": [
                "./segments"
            ],
            "layouts": [
                "./layouts"
            ],
            "containers": [
                "./containers"
            ],
            "components": [
                "./components"
            ],
            "typings": [
                "./typings"
            ],
            "assets": [
                "./assets"
            ],
            "utils": [
                "./utils"
            ],
            "config": [
                "./config"
            ],
            "styles": [
                "./assets/styles"
            ],
            "images": [
                "./assets/images"
            ],
            "scripts": [
                "./assets/scripts"
            ],
            "svgstore": [
                "./assets/svgstore"
            ],
            "store": [
                "./redux/store"
            ],
            "actions": [
                "./redux/actions"
            ],
            "reducers": [
                "./redux/reducers"
            ]
        }
        // "rootDirs": [
        //     "./segments/confirm",
        //     "./segments/sidebar",
        // ]
    },
    "files": [
        "./typings/**.ts"
    ],
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "./**/*.scss",
        "!node_modules/**/*"
    ],
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests",
        "webpack",
        "typings",
        "**/*.spec.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "useBabel": true,
        "forkChecker": true,
        "transpileOnly": false,
        "useWebpackText": true,
        "errorsAsWarnings": true,
        "useTranspileModule": true
    }
}
