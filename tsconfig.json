{
    "buildOnSave": false,
    "compileOnSave": true,
    "compilerOptions": {
        "reactNamespace": "",
        "baseUrl": "src",
        "rootDir": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "jsx": "react",
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "lib": [
            "ES2017",
            "DOM"
        ],
        "typeRoots": [
            "src/typings/**/*"
        ],
        "paths": {
            "src/*": ["src/*"],
            "hocs/*": ["src/hocs/*"],
            "pages/*": ["src/pages/*"],
            "utils/*": ["src/utils/*"],
            "config/*": ["src/config/*"],
            "assets/*": ["src/assets/*"],
            "typings/*": ["src/typings/*"],
            "layouts/*": ["src/layouts/*"],
            "fragments/*": ["src/fragments/*"],
            "variables/*": ["src/variables/*"],
            "styles/*": ["src/assets/styles/*"],
            "images/*": ["src/assets/images/*"],
            "scripts/*": ["src/assets/scripts/*"],
            "svgstore/*": ["src/assets/svgstore/*"],
            "components/*": ["src/components/*"],
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "webpack",
        "dist",
        "lib",
        "es"
    ],
    "plugins": [
        {
            "name": "typescript-styled-plugin",
            "validate": false,
            "lint": {
                "vendorPrefix": "error",
                "zeroUnits": "ignore",
                "important": "warning"
            },
            "tags": [
                "styled",
                "css",
                "sty"
            ]
        }
    ],
    "awesomeTypescriptLoaderOptions": {
        "silent": true
    }
}
