{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "lib": [ "es5", "es2015", "dom" ],
        "rootDir": "./",
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "removeComments": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests",
        "webpack"
    ]
}
