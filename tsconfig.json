{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "declaration": false,
        "inlineSourceMap": false,
        "inlineSources": false,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "removeComments": true,
        "strictNullChecks": false,
        "preserveConstEnums": true,
        "noImplicitReturns": false,
        "noUnusedParameters": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es5",
            "es6",
            "es7",
            "dom"
        ],
        "paths": {
            "*": [
                "app/hoc/*",
                "app/utils/*",
                "app/layouts/*",
                "app/typings/*",
                "app/segments/*",
                "app/containers/*",
                "app/components/*",
                "app/redux/*"
            ]
        }
    },
    "files": [
        "./app/typings/**.ts"
    ],
    "include": [
        "./app/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests",
        "webpack",
        "typings",
        "**/*.spec.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "useBabel": true
    }
}
