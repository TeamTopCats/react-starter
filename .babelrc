{
    "presets": [
        ["env", {
            "targets": {
                "node": "current",
                "browsers": ["last 2 versions"],
                "forceAllTransforms": true
            },
            "loose": true,
            "debug": false,
            "uglify": true,
            "modules": false,
            "useBuiltIns": false
        }],
        "stage-2",
        "react"
    ],
    "plugins": [
        "dual-import",
        "transform-imports",
        "transform-react-jsx",
        ["babel-plugin-styled-components", {
            "minify": false,
            "uglifyPure": false
        }]
    ],
    "env": {
        "test": {
            "presets": [
                "env",
                "react"
            ],
            "plugins": [
                "transform-es2015-modules-commonjs"
            ]
        },
        "development": {
            "plugins": [
                "react-hot-loader/babel",
                "transform-class-properties",
                "transform-react-display-name"
            ],
            "sourceMaps": true
        },
        "production": {
            "presets": [
                "minify"
            ],
            "plugins": [
                "transform-react-inline-elements",
                "transform-react-constant-elements",
                "transform-react-pure-class-to-function",
                [
                    "transform-runtime",
                    {
                        "helpers": false,
                        "polyfill": false,
                        "regenerator": true,
                        "moduleName": "babel-runtime"
                    }
                ]
            ],
            "ignore": [
                "dist",
                "tests",
                "node_modules"
            ]
        }
    }
}
